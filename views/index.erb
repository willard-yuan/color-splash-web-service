<%= erb :header %>

<div id="playground">
  <form action="/pygmentize" method="POST" id="pygmentize-form">
    <p><label for="lexer">Select a language</label></p>
    <p>
    <select name="lexer" id="lexer">

    <% @lexer_options.each do |value, text| %>
      <option value="<%= value %>"><%= text %></option>
    <% end %>

    </select>
    </p>
    <p><label for="input-text">Enter your code</label></p>
    <p><textarea id="input-text" name="input-text"></textarea></p>
    <p><button type="button" onclick="pygmentizeCode(); return false;" id="submit">Generate</button></p>
  </form> <!--/pygmentize-form-->

  <p class="label">Freshly baked HTML</p>
  <div id="output-text">
    <div style="text-align: center;">Your code will be available here.</div>
  </div> <!--/output-text-container-->
</div> <!--/playground-->

